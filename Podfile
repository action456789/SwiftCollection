source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
use_frameworks!

target 'SwiftCollection' do
    # swift 版 AFNetworking
    pod 'Alamofire', '~> 3.4'
    
    # 简化 JSON 访问
    pod 'SwiftyJSON'
    
    # JSON 转 对象
    pod 'ObjectMapper', '~> 1.3'
    
    # swift 版 Masonry
    pod 'SnapKit', '~> 0.15.0'
    
    pod 'ReactiveCocoa', '~> 4.2.2'
end

